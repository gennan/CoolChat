<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/iv_user_icon_recycle_item_user"
            android:background="@drawable/place_holder_user_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"/>

    <TextView
            android:id="@+id/tv_user_name_recycle_item_user"
            android:layout_toRightOf="@id/iv_user_icon_recycle_item_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="群聊名或者好友的用户名"
            android:layout_centerVertical="true"/>
</RelativeLayout>