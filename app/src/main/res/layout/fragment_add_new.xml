<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/iv_add_new_search"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:text="添加"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

        <EditText
                android:layout_toLeftOf="@id/iv_add_new_search"
                android:theme="@style/CoolChatInnerEditText"
                android:textCursorDrawable="@drawable/add_new_et_cursor_color"
                android:id="@+id/et_add_new"
                android:hint="输入好友/群聊的名称"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

</LinearLayout>