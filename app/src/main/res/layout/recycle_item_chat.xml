<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="10dp">

    <LinearLayout
            android:id="@+id/ll_left_item_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@drawable/ic_message_left">

        <TextView
                android:id="@+id/tv_left_msg_item_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:textColor="#fff"/>

        <TextView
                android:id="@+id/tv_left_voice_item_chat"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="语音"
                android:drawableRight="@drawable/ic_chat_voice"/>

        <ImageView
                android:id="@+id/iv_left_img_item_chat"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:scaleType="fitXY"
                android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/ll_right_item_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/ic_message_right">

        <TextView
                android:id="@+id/tv_right_msg_item_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"/>

        <TextView
                android:id="@+id/tv_right_voice_item_chat"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="语音"
                android:drawableLeft="@drawable/ic_chat_voice"/>

        <ImageView
                android:id="@+id/iv_right_img_item_chat"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:scaleType="fitXY"
                android:layout_gravity="center"/>


    </LinearLayout>
</LinearLayout>