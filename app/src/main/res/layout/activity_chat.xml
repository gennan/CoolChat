<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout_chat"
            app:elevation="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

        <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                android:fitsSystemWindows="true">

            <ImageView
                    android:id="@+id/tv_admission_required_title_left"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="14dp"
                    android:singleLine="true"
                    android:gravity="center"
                    android:src="@drawable/chat_back"
                    android:visibility="visible"/>

            <TextView
                    android:id="@+id/tv_title_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="17dp"
                    android:layout_marginBottom="15dp"
                    android:singleLine="true"
                    android:text="联系人用户名"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:visibility="visible"/>

            <ImageView
                    android:id="@+id/iv_add_friend"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="right"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:src="@drawable/chat_see_data"
                    android:visibility="visible"
                    tools:ignore="RtlHardcoded"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <!--底部的发送还有一堆乱七八糟的东西-->
    <LinearLayout
            android:id="@+id/ll_bottom_chat"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <!--EditText和发送按钮-->
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText
                    android:id="@+id/et_send_message_chat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:textSize="17sp"/>

            <TextView
                    android:id="@+id/tv_send_message_chat"
                    android:gravity="center"
                    android:text="发送"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/iv_voice_chat"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/chat_voice"/>

            <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/chat_picture"/>

            <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/chat_video"/>
        </LinearLayout>

        <RelativeLayout
                android:id="@+id/rl_press_to_say_voice"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="200dp">

            <ImageView
                    android:id="@+id/rounded_image_view_press_to_say"
                    android:layout_centerInParent="true"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/colorPrimary"/>

            <TextView
                    android:layout_marginBottom="20dp"
                    android:layout_above="@id/rounded_image_view_press_to_say"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="按住说话"/>
        </RelativeLayout>
    </LinearLayout>

    <!--用来刷新消息的RecyclerView-->
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_chat"
            android:layout_below="@id/app_bar_layout_chat"
            android:layout_above="@id/ll_bottom_chat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
</RelativeLayout>
