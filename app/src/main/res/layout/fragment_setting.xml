<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout_setting"
            app:elevation="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                android:fitsSystemWindows="true">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="17dp"
                    android:layout_marginBottom="15dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:text="设置"
                    android:textSize="18sp"
                    android:visibility="visible"/>

            <ImageView
                    android:src="@drawable/message_add"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="right"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:visibility="invisible"
                    tools:ignore="RtlHardcoded"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_below="@id/app_bar_layout_setting"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_begin="50dp"
                android:id="@+id/guideline"/>

        <androidx.constraintlayout.widget.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_begin="228dp"
                android:id="@+id/guideline2"/>

        <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/iv_avatar_setting"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/guideline"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline2"/>

        <TextView
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:text="更换头像"
                android:layout_width="357dp"
                android:layout_height="44dp"
                android:id="@+id/tv_change_avatar_setting"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toTopOf="@+id/guideline2"/>

        <TextView
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:text="广场"
                android:layout_width="357dp"
                android:layout_height="44dp"
                android:id="@+id/tv_enter_square_setting"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_change_avatar_setting"
                android:layout_marginTop="8dp"/>

        <TextView
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:text="提供反馈"
                android:layout_width="357dp"
                android:layout_height="44dp"
                android:id="@+id/tv_provide_feedback_setting"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_enter_square_setting"
                android:layout_marginTop="8dp"/>

        <TextView
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_width="357dp"
                android:layout_height="44dp"
                android:id="@+id/tv_about_setting"
                app:layout_constraintTop_toBottomOf="@+id/tv_provide_feedback_setting"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="关于"/>

        <TextView
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:text="切换账号"
                android:layout_width="357dp"
                android:layout_height="44dp"
                android:id="@+id/tv_change_account_setting"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_about_setting"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>